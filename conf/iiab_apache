WSGIRestrictStdout Off
LogLevel info
XSendFile on
XSendFilePath /

<VirtualHost *>
    ServerName iiab

    WSGIDaemonProcess iiab user=braddock group=braddock threads=5
    WSGIScriptAlias /iiab /knowledge/internet-in-a-box/iiab/iiab.wsgi

    <Directory /knowledge/internet-in-a-box/>
        WSGIProcessGroup iiab
        WSGIApplicationGroup %{GLOBAL}
        WSGIScriptReloading On
        Order deny,allow
        Allow from all
    </Directory>

    Alias /static /knowledge/internet-in-a-box/iiab/static
    Alias /khanvideo /knowledge/modules/khanacademy/khanlinks
    Alias /software /knowledge/modules/ubuntu/12.04/mirror/archive.ubuntu.com/ubuntu
</VirtualHost>
